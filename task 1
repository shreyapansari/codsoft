// simple calculator

#include<iostream>
using namespace std;
int main()
{
    char oper;
    float num1, num2;
    cout<<"enter operation to be performed";
    cin>>oper;
    cout<<"enter the two numbers/operands";
    cin>>num1>>num2;

    switch(oper)
    {
        case '+': 
         cout<<num1+num2;
         break;
        case '-':
         cout<<num1-num2;
         break;
        case '*':
         cout<<num1*num2;
         break;
        case '/':
         cout<<num1/num2;
         break;
        default:
         cout<<"enter the correct operator";
         break;
    }

    return 0;
}
